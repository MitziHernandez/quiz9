#include <iostream>
using namespace std;
int triangle(int n)
{
	for (int i=0; i<n; i++)
	{
		for (int j=0; j<i; j++)
		{
			cout<< "T";
		}
		cout<< endl;
	}
	for (int i=n-1; i>0; --i)
	{
		for (int j=0; j<i; j++)
		{
			cout<< "T";
		}
		cout<< endl;
	}
	return 0;
}
int main ()
{
	int n;
	cout<< "ingrese el numero de lineas para formar el triangulo" << endl;
	cin>> n;
	triangle(n);
	return 0;
}
